<div class="new-user-form">
  <h2 class="new-user-heading">
    Sign up
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name, "First Name" %><br />
      <%= f.text_field :first_name, placeholder: "First Name", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :last_name, "Last Name" %><br />
      <%= f.text_field :last_name, placeholder: "Last Name", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :avatar, "Profile Photo" %><br />
      <%= f.file_field :avatar, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input" %>
    </div>

    <div>
      <%= f.label :address %>
      <%= f.text_field :address, placeholder: "Address", class: "input" %>
    </div>

    <div>
      <%= f.label :address2, "Address 2" %>
      <%= f.text_field :address2, placeholder: "Address 2", class: "input" %>
    </div>

    <div>
      <%= f.label :city %>
      <%= f.text_field :city, placeholder: "City", class: "input" %>
    </div>

    <div>
      <%= f.label :state %>
      <%= f.text_field :state, placeholder: "State", class: "input" %>
    </div>

    <div>
      <%= f.label :zip, "Zip Code" %>
      <%= f.text_field :zip, placeholder: "Zip Code", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Password Confirmation" %><br />
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off", class: "input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
