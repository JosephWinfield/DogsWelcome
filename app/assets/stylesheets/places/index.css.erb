.headline {
  font-family: 'IntroScriptB-H1Base';
  font-size: 67.5px;
  font-weight: normal;
  -webkit-font-smoothing: antialiased;
  float: left;
  margin-bottom: 60px;
}

.search {
  width: 42.3%;
  margin: 0 auto;
}

.search input {
  outline: none;
}

.search label {
  display: none;
}

.search #location {
  background: transparent;
  border: none;
  border-bottom: 1px solid #ececec;
  font-size: 42.5px;
  text-align: left;
  width: 80%;
  color: #ececec;
  font-weight: 700;
  font-style: italic;
}

.search .search-button {
  background: transparent;
  border: none;
  background-image: url("<%=asset_path('search-icon-colo.svg')%>");
  width: 35px;
  height: 35px;
  background-size: contain;
  background-repeat: no-repeat;
  padding: 0;
}

.places-list {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}

.place-item {
  list-style: none;
  margin: 0;
  flex: 1 0 50%;
  padding-bottom: 60px;
}

.place-item h2 {
  font-family: "adelle-sans";
  font-weight: 700;
  font-style: italic;
  font-size: 32.5px;
  -webkit-font-smoothing: antialiased;
  margin: 18px 0 0;
}

.place-item a {
  text-decoration: none;
  color: #ececec;
}

.place-image {
  border-radius: 50%;
  width: 137px;
  height: 137px;
  float: left;
  margin-right: 22px;
}

.address {
  font-size: 14px;
  font-weight: 400;
  font-style: italic;
}

.category {
  color: #5ed7fa;
}
