.body {
  background-image: url("<%= asset_path('bg.png') %>");
  background-size: 200px 200px;
  font-family: "adelle-sans";
  color: #ececec;
  -webkit-font-smoothing: antialiased;
}

.root-wrapper {
  width: 88%;
  margin: 0 auto;
}

.root-headline::before, .headline::before {
  content: "";
  height: 45px;
  width: 45px;
  display: inline-block;
  vertical-align: middle;
  background-repeat: no-repeat;
  margin-right: -15px;
  margin-bottom: 5px;
}

.root-headline::before {
  background-image: url("<%= asset_path('dw-mark-light.svg')%>");
}

.headline::before {
  background-image: url("<%= asset_path('dw-mark-color.svg')%>");
}

.headline a, .root-headline a {
  text-decoration: none;
  color: #ececec;
}

.new-place a::after {
  content: "+";
  padding-left: 5px;
}

.navigation ul {
  padding: 0;
  text-align: center;
}

@media(min-width: 800px) {
  .root-wrapper, .wrapper {
    width: 90%;
    margin: 0 auto;
  }

  .root-headline a, .headline a {
    margin-left: -7px;
  }

  .root-headline::before, .headline::before {
    height: 70px;
    width: 70px;
  }
}
